<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appcolor"
        android:weightSum="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mednu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_main"
                android:elevation="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_menu_24px"/>

            <TextView
                android:id="@+id/textVfiew"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:singleLine="false"
                android:text="휘슬 위젯을 실행하거나 상세한 설정을 할 수 있습니다."
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mefdnu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_map"
                android:elevation="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_round_map_24px"/>

            <TextView
                android:id="@+id/textVdfdfiew"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:singleLine="false"
                android:text="지도를 통해 내 주변의 안전시설(편의점,경찰서,병원,소방서)등을 보여주고 가장 가까운 경찰서를 알려줍니다"
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mdfdfenu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_trigger"
                android:elevation="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_touch_app_24px"/>

            <TextView
                android:id="@+id/tefdfdfxtView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:singleLine="false"
                android:text="비상시 각종 알림을 보내는 제스쳐들을 선택하여 설정할 수 있습니다."
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mefffnu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:background="@drawable/button_alarm"
                android:elevation="0dp"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_notification_important_24px"/>

            <TextView
                android:id="@+id/textffffffdView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:singleLine="false"
                android:text="비상시 작동하는 여러 긴급알람들을 선택하여 설정할 수 있습니다."
                android:textAlignment="center"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/mainButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/appcolor"
            android:text="다음"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="148dp"
            tools:layout_editor_absoluteY="374dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>