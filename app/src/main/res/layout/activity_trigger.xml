<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TriggerActivity">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="14">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/shake"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:padding="40dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_vibrate" />

            <ImageButton
                android:id="@+id/power"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:padding="40dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_power_settings_new_24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/plug"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:padding="40dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_plug2" />

            <ImageButton
                android:id="@+id/save"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:padding="40dp"
                android:background="#fafafa"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_done_24px" />

        </LinearLayout>

        <View
            android:id="@+id/view4"
            style="@style/Divider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:weightSum="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="전원버튼 연타수"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/poc"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:max="10"
                    android:progress="3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="흔들기 세기"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/pow"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:max="10"
                    android:progress="3" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="흔들기 횟수"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <SeekBar
                    android:id="@+id/rate"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:max="6"
                    android:progress="2" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageButton
                android:id="@+id/menu"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_main"
                android:elevation="0dp"
                android:alpha="0.35"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_menu_24px" />

            <ImageButton
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:alpha="0.35"
                android:background="@drawable/button_map"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_round_map_24px" />

            <ImageButton
                android:id="@+id/trigger"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/button_trigger"
                android:padding="0dp"
                android:scaleType="centerCrop"

                app:srcCompat="@drawable/ic_baseline_touch_app_24px" />

            <ImageButton
                android:id="@+id/alarm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:alpha="0.35"

                android:layout_weight="1"
                android:background="@drawable/button_alarm"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_baseline_notification_important_24px" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>